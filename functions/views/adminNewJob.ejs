<% layout('/template/adminBoilerplate') -%>

    <div class="container my-5">
        <h3 class="text-center">Job</h3>
        <form action="<%=devFun%>/adminNewJob/<%= uid %> " method="post" class="row">
            <div class="col-2 col-lg-4"></div>
            <div class="col-8 col-lg-4 my-5">
                <div class="mb-5 row ">
                    <label for="jobRole" class="form-label">Job Role</label>
                    <input type="text" class="form-control text-light bg-transparent border-0 border-bottom border-info"
                        id="jobRole" name="jobRole">
                </div>
                <div class="mb-5 row ">
                    <label for="jobExperience" class="form-label">Experience</label>
                    <input type="text" class="form-control text-light bg-transparent border-0 border-bottom border-info"
                        id="jobExperience" name="jobExperience">
                </div>
                <div class="mb-5 row ">
                    <label for="jobCity" class="form-label">City</label>
                    <input type="text" class="form-control text-light bg-transparent border-0 border-bottom border-info"
                        id="jobCity" name="jobCity">
                </div>
                <div class="mb-5 row ">
                    <label for="jobCountry" class="form-label">Country</label>
                    <input type="text" class="form-control text-light bg-transparent border-0 border-bottom border-info"
                        id="jobCountry" name="jobCountry">
                </div>
                <div class="row d-flex justify-content-center mt-5">
                    <button type="submit" class="btn btn-info w-50">Save and Exit</button>
                </div>

            </div>
            <div class=" col-2 col-lg-4"></div>

        </form>

    </div>