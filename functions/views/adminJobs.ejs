<% layout('/template/adminBoilerplate') -%>
 

                    <div class="container my-5">
                        <div class="row d-flex flex-row justify-content-between my-5">
                            <div class="col-lg-10 col-6">
                                <h3>Jobs</h3>
                            </div>
                            <a class="btn btn-info col-lg-2 col-6" href="<%=devFun%>/adminNewjob/<%= uid %> ">
                                Add Job
                            </a>
                        </div>
                        <div class="row jobs border-0 border-bottom border-info d-flex justify-content-between">
                            <%  jobs.forEach(job => { %> 
                            <div class="col-lg-5 job">
                                <div class="row">
                                        <div class="col-lg-8 col-12  my-2 p-5">
                                            <h5 class="row ">
                                                <div class=""><%= job.data().jobRole %></div>
                                            </h5>
                                            <div class="row mt-4">
                                                <div class="">Experience : <%= job.data().jobExperience %></div>
                                                <div class=""><%= job.data().jobCity %>, <%= job.data().jobCountry %></div>
                                            </div>
                                            <div class="row mt-4">
                                                <% const date = job.data().postTime %> 
                                                <div class="text-white-50">Posted : <%=date.toDate().toDateString()%> </div>
                                            </div>
                                        </div>
                                        <div
                                            class="col-lg-4 col-12 p-lg-5 my-2 p-3 d-flex justify-content-center align-items-center">
                                            <a class="change "
                                                href="<%=devFun%>/adminEditjob/<%= uid %>/<%= job.id %>"><i
                                                    class="fs-3 fas fa-pen"></i></a>
                                        </div>
                                </div>
                            </div>
                            <% }) %> 
                        </div>
                    </div>
